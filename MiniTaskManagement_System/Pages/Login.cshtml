@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Mini Task Management System</title>

    <!-- Bootstrap & Argon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link id="pagestyle" href="/css/argon-dashboard.css" rel="stylesheet" />

    <!-- Login CSS -->
    <link rel="stylesheet" href="~/css/login.css" />

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <div class="login-container">
        <div class="modal-dialog modal-dialog-centered modal-md login-card" role="document">
            <div class="modal-content shadow-lg border-0 rounded-4">
                <div class="modal-body p-0">
                    <div class="card card-plain mb-0">

                        <div class="card-header pb-0 text-center">
                            <img src="~/images/task.png" width="70" alt="Logo" class="mb-3" />
                            <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                            <p class="mb-0 text-secondary">Login to your account</p>
                        </div>

                        <div class="card-body px-4">
                            <form id="loginForm" role="form text-left">

                                <label class="fw-semibold">Mobile Number</label>

                                <div class="input-group mb-3">
                                    <input type="text" id="mobileNumber" class="form-control" placeholder="Enter mobile number" required>
                                    @* Use MobileNo as a 0769644032 *@
                                </div>

                                <label class="fw-semibold">Password</label>

                                <div class="input-group mb-3">
                                    <input type="password" id="password" class="form-control" placeholder="Enter password" required>
                                    @* Use Password as a 123456 *@
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-round bg-gradient-info btn-lg w-100 mt-2 mb-0">Sign in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
